<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TutoFirebaseAuthKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style pour l'affichage fullscrenn-->
    <style name="Theme.TutoFirebaseAuthKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style pour la couleur de la progressBar du progressDialog    -->
    <style name="Theme.TutoFirebaseAuthKotlin.ProgressBarStyle">
        <item name="colorAccent">@color/color_primary</item>
    </style>
</resources>